def recurs(n):
    #дно рекурсии, когда n равно 2
    if n == 2:
        return 2
    else:
        #шаг рекурсии: прибавляем предыдущую функцию с аргументом на 2 меньше текущего
        return n + recurs(n - 2)

while True:
    print('Введите число N')
    n = int(input())
    #если число слишком маленькое выводим ошибку
    if n <= 1:
        print('Неправильный формат ввода')
    else:
        #если число нечетное отнимаем 1, для получения четного и без потери результата
        if n % 2 == 1:
            n -= 1
        #обращение к рекурсии
        sum = recurs(n)
        print(sum)

